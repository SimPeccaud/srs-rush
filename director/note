director-1 : 10.250.14.110
director-2 : 10.250.14.111

ifconfig eth?:0 10.250.14.100 netmask 255.255.255.0

10.250.x.101 -> 10.250.x.120 / 10.250.x.121 (uniquement pour le port 443) WWW
10.250.x.102 -> 10.250.x.130
10.250.x.103 -> 10.250.x.130 / 10.250.x.132

echo 1 > /proc/sys/net/ipv4/conf/eth6/arp_ignore
echo 2 > /proc/sys/net/ipv4/conf/eth6/arp_announce
echo 1 > /proc/sys/net/ipv4/conf/all/arp_ignore
echo 2 > /proc/sys/net/ipv4/conf/all/arp_announce

## LVS Configuration

net.ipv4.ip_forward = 1

root@director-1:/home/w4kfu/kernel# cat /etc/sysctl.conf

sysctl -w net.ipv4.ip_forward="1"

ifconfig eth6:1 10.250.14.101 netmask 255.255.255.0 broadcast 10.250.14.255

ipvsadm -A -t 10.250.14.101:443
ipvsadm -a -t 10.250.14.101:443 -r 10.250.14.120:443 -g
ipvsadm -a -t 10.250.14.101:443 -r 10.250.14.121:443 -g


## Haproxy

touch /var/www/haproxytest.txt

/usr/sbin/haproxy -D -f /etc/haproxy/haproxy.cfg -p /var/run/haproxy.pid


